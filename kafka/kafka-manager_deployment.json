{
  "kind": "Deployment",
  "apiVersion": "extensions/v1beta1",
  "metadata": {
    "name": "kafka-manager-test-kafka-manager",
    "namespace": "kube-system",
    "labels": {
      "app.kubernetes.io/instance": "kafka-manager-test",
      "app.kubernetes.io/managed-by": "Tiller",
      "app.kubernetes.io/name": "kafka-manager",
      "app.kubernetes.io/version": "",
      "helm.sh/chart": "kafka-manager-1.1.1"
    },
    "annotations": {
      "deployment.kubernetes.io/revision": "1"
    }
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "matchLabels": {
        "app": "kafka-manager",
        "release": "kafka-manager-test"
      }
    },
    "template": {
      "metadata": {
        "creationTimestamp": null,
        "labels": {
          "app": "kafka-manager",
          "release": "kafka-manager-test"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "kafka-manager",
            "image": "zenko/kafka-manager:1.3.3.22",
            "ports": [
              {
                "name": "kafka-manager",
                "containerPort": 9000,
                "protocol": "TCP"
              }
            ],
            "env": [
              {
                "name": "ZK_HOSTS",
                "value": "reactive-sandbox-test-reactive-sandbox-zookeeper:2181"
              },
              {
                "name": "JAVA_OPTS"
              },
              {
                "name": "APPLICATION_SECRET",
                "valueFrom": {
                  "secretKeyRef": {
                    "name": "kafka-manager-test-kafka-manager",
                    "key": "applicationSecret"
                  }
                }
              },
              {
                "name": "KAFKA_MANAGER_AUTH_ENABLED",
                "value": "false"
              },
              {
                "name": "KAFKA_MANAGER_USERNAME",
                "valueFrom": {
                  "secretKeyRef": {
                    "name": "kafka-manager-test-kafka-manager",
                    "key": "basicAuthUsername"
                  }
                }
              },
              {
                "name": "KAFKA_MANAGER_PASSWORD",
                "valueFrom": {
                  "secretKeyRef": {
                    "name": "kafka-manager-test-kafka-manager",
                    "key": "basicAuthPassword"
                  }
                }
              }
            ],
            "resources": {},
            "livenessProbe": {
              "httpGet": {
                "path": "/api/health",
                "port": "kafka-manager",
                "scheme": "HTTP"
              },
              "timeoutSeconds": 1,
              "periodSeconds": 10,
              "successThreshold": 1,
              "failureThreshold": 3
            },
            "readinessProbe": {
              "httpGet": {
                "path": "/api/health",
                "port": "kafka-manager",
                "scheme": "HTTP"
              },
              "timeoutSeconds": 1,
              "periodSeconds": 10,
              "successThreshold": 1,
              "failureThreshold": 3
            },
            "terminationMessagePath": "/dev/termination-log",
            "terminationMessagePolicy": "File",
            "imagePullPolicy": "IfNotPresent"
          }
        ],
        "restartPolicy": "Always",
        "terminationGracePeriodSeconds": 30,
        "dnsPolicy": "ClusterFirst",
        "serviceAccountName": "kafka-manager-test-kafka-manager",
        "serviceAccount": "kafka-manager-test-kafka-manager",
        "securityContext": {},
        "schedulerName": "default-scheduler"
      }
    },
    "strategy": {
      "type": "RollingUpdate",
      "rollingUpdate": {
        "maxUnavailable": "25%",
        "maxSurge": "25%"
      }
    },
    "revisionHistoryLimit": 10,
    "progressDeadlineSeconds": 600
  }
}